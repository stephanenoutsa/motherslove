<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.Labour"
    tools:showIn="@layout/activity_labour"
    android:background="@color/colorAnc">

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_when_youll_deliver"
        android:id="@+id/buttonWhenYoullDeliver"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickWhenYoullDeliver"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_preparing_for_labour"
        android:id="@+id/buttonPreparingForLabour"
        android:layout_below="@+id/buttonWhenYoullDeliver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickPreparingForLabour"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_signs_of_labour"
        android:id="@+id/buttonSignsOfLabour"
        android:layout_below="@+id/buttonPreparingForLabour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickSignsOfLabour"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_pain_management"
        android:id="@+id/buttonPainManagement"
        android:layout_below="@+id/buttonSignsOfLabour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:textColor="@color/colorTextSecondary"
        android:nestedScrollingEnabled="false"
        android:onClick="onClickPainManagement" />
</RelativeLayout>
