<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.BeforeBirth"
    tools:showIn="@layout/activity_before_birth"
    android:background="@drawable/anc_image">

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_before_birth_anc"
        android:id="@+id/buttonBeforeBirthANC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickBeforeBirthANC"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_heduring_pregnancy"
        android:id="@+id/buttonHEDuringPregnancy"
        android:layout_below="@+id/buttonBeforeBirthANC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickHEDuringPregnancy"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_common_complaints_during_pregnancy"
        android:id="@+id/buttonCommonComplaintsDuringPregnancy"
        android:layout_below="@+id/buttonHEDuringPregnancy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickCommonComplaintsDuringPregnancy"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_high_risk_pregnancies"
        android:id="@+id/buttonHighRiskPregnancies"
        android:layout_below="@+id/buttonCommonComplaintsDuringPregnancy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickHighRiskPregnancies"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_danger_signs_during_pregnancy"
        android:id="@+id/buttonDangerSignsDuringPregnancy"
        android:layout_below="@+id/buttonHighRiskPregnancies"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickDangerSignsDuringPregnancy"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
