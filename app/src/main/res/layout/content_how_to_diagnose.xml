<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.HowToDiagnose"
    tools:showIn="@layout/activity_how_to_diagnose"
    android:background="@color/colorMalnutrition">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/diagnose_text"
        android:id="@+id/diagnoseText"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_category"
        android:id="@+id/diagnoseCategory"
        android:layout_below="@+id/diagnoseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="@color/colorTextPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_introduction_malnutrition"
        android:id="@+id/buttonIntroduction"
        android:layout_below="@+id/diagnoseCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickMalnutritionIntro"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_criteria_malnutrition"
        android:id="@+id/buttonCriteria"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonIntroduction"
        android:layout_alignLeft="@+id/buttonIntroduction"
        android:layout_alignStart="@+id/buttonIntroduction"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickMalnutritionCriteria"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_signs_malnutrition"
        android:id="@+id/buttonSigns"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonCriteria"
        android:layout_alignLeft="@+id/buttonCriteria"
        android:layout_alignStart="@+id/buttonCriteria"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickMalnutritionSigns"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
