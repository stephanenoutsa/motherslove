<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.ManagementAcuteDiarrhoea"
    tools:showIn="@layout/activity_management_acute_diarrhoea"
    android:background="@color/colorDiarrhoea">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/management_acute_diarrhoea_text"
        android:id="@+id/managementAcuteDiarrhoeaText"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTextPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_category"
        android:id="@+id/managementAcuteDiarrhoeaCategory"
        android:layout_below="@+id/managementAcuteDiarrhoeaText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="@color/colorTextPrimary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_no_dehydration"
        android:id="@+id/buttonNoDehydration"
        android:layout_below="@+id/managementAcuteDiarrhoeaCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickNoDehydration"
        android:textColor="@color/colorTextSecondary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_little_dehydration"
        android:id="@+id/buttonLittleDehydration"
        android:layout_below="@+id/buttonNoDehydration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickLittleDehydration"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_severe_dehydration"
        android:id="@+id/buttonSevereDehydration"
        android:layout_below="@+id/buttonLittleDehydration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickSevereDehydration"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
