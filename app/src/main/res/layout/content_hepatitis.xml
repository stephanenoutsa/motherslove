<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.Hepatitis"
    tools:showIn="@layout/activity_hepatitis"
    android:background="@drawable/image_special_needs">

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_hepatitis_introduction"
        android:id="@+id/buttonHepatitisIntroduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickHepatitisIntroduction"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_hepatitis_approach"
        android:id="@+id/buttonHepatitisApproach"
        android:layout_below="@+id/buttonHepatitisIntroduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickHepatitisApproach"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
