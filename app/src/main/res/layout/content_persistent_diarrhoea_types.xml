<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.PersistentDiarrhoeaTypes"
    tools:showIn="@layout/activity_persistent_diarrhoea_types"
    android:background="@color/colorDiarrhoea">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/persistent_diarrhoea_types_text"
        android:id="@+id/persistentDiarrhoeaTypesText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textColor="@color/colorTextPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_category"
        android:id="@+id/persistentDiarrhoeaTypesCategory"
        android:layout_below="@+id/persistentDiarrhoeaTypesText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="@color/colorTextPrimary" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_severe_persistent_diarrhoea"
        android:id="@+id/buttonSeverePersistentDiarrhoea"
        android:layout_below="@+id/persistentDiarrhoeaTypesCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorTextSecondary"
        android:onClick="onClickSeverePersistentDiarrhoea"
        android:background="@drawable/button_standard_border" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_non_severe_persistent_diarrhoea"
        android:id="@+id/buttonNonSeverePersistentDiarrhoea"
        android:layout_below="@+id/buttonSeverePersistentDiarrhoea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickNonSeverePersistentDiarrhoea"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
