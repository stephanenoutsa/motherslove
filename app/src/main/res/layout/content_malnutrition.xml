<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.babyandi.stephnoutsa.babyandi.Malnutrition"
    tools:showIn="@layout/activity_malnutrition"
    android:background="@color/colorMalnutrition">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/malnutrition_text"
        android:id="@+id/malnutritionText"
        android:textColor="@color/colorTextPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_category"
        android:id="@+id/malnutritionCategory"
        android:layout_marginTop="49dp"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@+id/malnutritionText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_how_to_diagnose"
        android:id="@+id/buttonDiagnose"
        android:onClick="onClickDiagnose"
        android:background="@drawable/button_standard_border"
        android:textColor="@color/colorTextSecondary"
        android:layout_below="@+id/malnutritionCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="@dimen/button_standard_width"
        android:layout_height="@dimen/button_standard_height"
        android:text="@string/title_activity_management"
        android:id="@+id/buttonManage"
        android:layout_below="@+id/buttonDiagnose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/button_standard_border"
        android:onClick="onClickManage"
        android:textColor="@color/colorTextSecondary" />
</RelativeLayout>
