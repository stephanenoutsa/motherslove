<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyOptionsMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    
    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:firstDayOfWeek">2</item>
        <item name="android:focusedMonthDateColor">@color/colorPrimary</item>
        <item name="android:selectedWeekBackgroundColor">@color/colorSpecialNeeds</item>
        <item name="android:showWeekNumber">false</item>
        <!--<item name="android:weekNumberColor">@color/colorTextSecondary</item>-->
        <item name="android:weekSeparatorLineColor">@color/colorPrimary</item>
    </style>

</resources>
